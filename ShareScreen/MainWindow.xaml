<Window x:Class="ShareScreen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShareScreen"
        mc:Ignorable="d"
        Title="UniDesk" Height="300" Width="600"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="65"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HOST INFORMATION -->
        <GroupBox>
            <GroupBox.Header>
                <TextBlock FontSize="14" FontWeight="Bold" Text="Host Information"/>
            </GroupBox.Header>

            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="1.8*"/>
                    <ColumnDefinition Width="65"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Content="ID:"/>
                <TextBox Grid.Column="1"
                         Background="Transparent"
                         BorderThickness="0"
                         VerticalContentAlignment="Center"
                         HorizontalContentAlignment="Center"
                         Text="{Binding HostId, Mode=OneWay}"
                         IsReadOnly="True"
                         TextWrapping="Wrap"/>

                <Label Grid.Column="2" Content="Password:"/>
                <TextBox Grid.Column="3"
                         Background="Transparent"
                         BorderThickness="0"
                         VerticalContentAlignment="Center"
                         HorizontalContentAlignment="Center"
                         Text="{Binding HostPassword, Mode=OneWay}"
                         IsReadOnly="True"
                         TextWrapping="Wrap"/>
            </Grid>
        </GroupBox>

        <!-- CONNECT TO CLIENT -->
        <GroupBox Grid.Row="1">
            <GroupBox.Header>
                <TextBlock FontSize="14" FontWeight="Bold" Text="Connect to client"/>
            </GroupBox.Header>

            <StackPanel Margin="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="1.8*"/>
                        <ColumnDefinition Width="65"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Content="ID:"/>
                    <TextBox Grid.Column="1"
                             Text="{Binding ClientId, Mode=TwoWay}"
                             HorizontalAlignment="Stretch"
                             VerticalContentAlignment="Center"/>

                    <Label Grid.Column="2" Content="Password:"/>
                    <TextBox Grid.Column="3"
                             Text="{Binding ClientPassword, Mode=TwoWay}"
                             VerticalContentAlignment="Center"/>
                </Grid>

                <Button Content="Connect"
                        Width="100"
                        Height="45"
                        Margin="0 5 0 0"
                        Click="Button_Click"/>

                <Label Content="{Binding ConnectionStatus}"
                       HorizontalAlignment="Center"/>

                <Label Content="{Binding ConnectionId}"
                       HorizontalAlignment="Center"/>
            </StackPanel>
        </GroupBox>

    </Grid>
</Window>
